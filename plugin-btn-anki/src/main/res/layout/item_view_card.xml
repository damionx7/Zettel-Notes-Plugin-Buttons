<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView

   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="8dp">

        <androidx.appcompat.widget.AppCompatTextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:id="@+id/item_view_card_question"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:hint="Question"
           android:layout_margin="8dp" />
        <androidx.appcompat.widget.AppCompatTextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:id="@+id/item_view_card_answer"
           app:layout_constraintTop_toBottomOf="@+id/item_view_card_question"
           android:hint="Answer"
           android:layout_margin="8dp" />
        <com.google.android.material.chip.Chip
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/item_view_card_type"
           app:layout_constraintTop_toBottomOf="@+id/item_view_card_answer"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           android:hint="Type"
           android:layout_margin="8dp"
           android:textSize="12sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>