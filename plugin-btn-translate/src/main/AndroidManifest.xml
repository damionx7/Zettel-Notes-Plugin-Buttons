<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.eu.thedoc.zettelnotes.buttons.translate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZettelNotes" >

        <activity android:name=".LauncherActivity"
            android:theme="@style/Theme.ZettelNotes"
            android:exported="true">
            <intent-filter>
                <action android:name="org.eu.thedoc.zettelnotes.intent.buttons" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TranslateActivity"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:launchMode="singleTask"
            android:exported="true"
            android:theme="@style/AppThemeTransparent">
            <intent-filter>
                <action android:name="org.eu.thedoc.zettelnotes.intent.buttons.translate" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>